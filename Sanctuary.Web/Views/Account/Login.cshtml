<!-- Pills content -->
<div class="tab-content text-center" >
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <form>
            <div class="text-center mb-3">
                <p>Sign in with:</p>
                <button type="button" class="btn btn-link mx-1">
                    <img ></img>
                </button>

                <button type="button" class="btn btn-link mx-1">
                    <i class="fab fa-google"></i>
                </button>

                <button type="button" class="btn btn-link mx-1">
                    <i class="fab fa-twitter"></i>
                </button>

                <button type="button" class="btn btn-link mx-1">
                    <i class="fab fa-github"></i>
                </button>
            </div>

            <p class="text-center">or:</p>

            <div class="form-outline mb-4">
                <input asp-for="@Model.Email" class="form-control" placeholder="E-Mail" autocomplete="Email" aria-required="true" />
            </div>

            <div class="form-outline mb-4">
                <input asp-for="@Model.Password" class="form-control" placeholder="Password" autocomplete="Password" aria-required="true" />
            </div>

            <!-- 2 column grid layout -->
            <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check mb-3 mb-md-0">
                        <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                        <label class="form-check-label" for="loginCheck"> Remember me </label>
                    </div>
                </div>

                <div class="col-md-6 d-flex justify-content-center">
                    <!-- Simple link -->
                    <a href="#!">Forgot password?</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Not a member? <a href="#!">Register</a></p>
            </div>
        </form>
    </div>
</div>
